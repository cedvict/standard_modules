<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--TEMPLATE [REPORT - JOURNAL ENTRY]-->
    <template id="report_journal_entry_document">
        <t t-call="report.external_layout">
            <t t-set="o" t-value="o.with_context({'lang': 'en_US'})" />
            <div class="page">
                <center><h3><b>COMPROBANTE DE DIARIO</b></h3></center>
                <h2>
                    <span t-field="o.name"/>
                </h2>
                <div class="row mt32 mb32">
                    <div class="col-xs-6" t-if="o.journal_id">
                        <strong>Diario:</strong>
                        <p t-field="o.journal_id"/>
                    </div>
                    <div class="col-xs-6" t-if="o.ref">
                        <strong>Referencia:</strong>
                        <p t-field="o.ref"/>
                    </div>
                    <div class="col-xs-6" t-if="o.date">
                        <strong>Fecha:</strong>
                        <p t-field="o.date"/>
                    </div>
                </div>

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Cuenta</th>
                            <th>Empresa</th>
                            <th>Descripción</th>
                            <th>Débito</th>
                            <th>Crédito</th>
                            <th>Fecha Vencimiento</th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <tr t-foreach="o.line_ids" t-as="l">
                            <td><span t-field="l.account_id"/></td>
                            <td><span t-field="l.partner_id"/></td>
                            <td><span t-field="l.name"/></td>
                            <td><span t-field="l.debit"/></td>
                            <td><span t-field="l.credit"/></td>
                            <td><span t-field="l.date_maturity"/></td>
                        </tr>
                        <tr/>
                        <tr class="border-black">
                            <td/>
                            <td/>
                            <td/>
                            <td> <span t-field="o.amount"/></td>
                            <td> <span t-field="o.amount"/></td>
                            <td/>
                        </tr>
                        <tr class="border-black"/>
                    </tbody>
                </table>

                <div class="row mt32 mb32">
                    <div class="col-xs-6">
                        <strong>--------------------------</strong>
                        <strong>FIRMA REALIZADO POR</strong>
                    </div>
                    <div class="col-xs-6">
                        <strong>--------------------------</strong>
                        <strong>FIRMA CONTADOR</strong>
                    </div>
                </div>


            </div>
        </t>
    </template>
    <!--TEMPLATE [REPORT - JOURNAL ENTRY]-->
    <template id="tmpte_journal_entry">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="iwesabe_reports_journal_entry.report_journal_entry_document" t-lang="'en_US'"/>
            </t>
        </t>
    </template>
    <!---->
    <report id="report_journal_entry"
            model="account.move"
            string="Journal Entries"
            report_type="qweb-pdf"
            name="iwesabe_reports_journal_entry.tmpte_journal_entry"
            file="iwesabe_reports_journal_entry.report_journal_entry"
            attachment_use="True"
    />
    <!--FORM JOURNAL ENTRY-->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.report.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="post" position="after">
                <button name="print_journal_entry" string="Imprimir" type="object" class="oe_highlight" help="Imprime en Pdf"/>
            </button>
        </field>

    </record>

</odoo>
